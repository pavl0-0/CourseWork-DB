@model Kino.Models.Film

@{
    ViewData["Title"] = "Видалити фільм";
}

<div class="container" style="margin-top: 50px;">
    <div class="cinema-form-card" style="border-color: #e50914; max-width: 600px;">
        <h2 style="text-align: center; margin-bottom: 20px;">Видалення фільму</h2>

        <div style="text-align: center;">
            <p class="delete-warning">Ви точно хочете видалити цей фільм?</p>

            @if (!string.IsNullOrEmpty(Model.PosterUrl))
            {
                <img src="~/images/posters/@Model.PosterUrl" style="width: 150px; border-radius: 5px; margin-bottom: 20px;" />
            }

            <h3 style="margin-bottom: 10px;">@Model.TitleUkrainian</h3>
            <p class="text-muted">@Model.TitleOriginal</p>

            <form asp-action="Delete">
                <input type="hidden" asp-for="FilmId" />
                <div style="margin-top: 30px;">
                    <input type="submit" value="Так, знищити назавжди" class="btn-cinema" style="background-color: darkred;" />
                    <a asp-action="Index" class="btn-secondary">Ні, я передумав</a>
                </div>
            </form>
        </div>
    </div>
</div>