@model IEnumerable<Kino.Models.SeatType>

@{
    ViewData["Title"] = "Типи місць";
}

<div class="container">
    <div class="page-header">
        <h1 class="page-title">Типи місць</h1>
        <a asp-action="Create" class="btn-cinema">+ Додати тип</a>
    </div>

    <div class="cinema-grid">
        @foreach (var item in Model)
        {
            <div class="genre-card">
                <div style="font-size: 2rem; margin-bottom: 10px;">🛋️</div>

                <span class="genre-name">@item.Name</span>

                <p style="color: var(--accent-color); font-weight: bold; font-size: 1.1rem; margin-bottom: 5px;">
                    x@(item.PriceMultiplier)
                </p>
                <small class="text-muted">Коефіцієнт ціни</small>

                <div class="card-actions" style="margin-top: 15px;">
                    <a asp-action="Edit" asp-route-id="@item.SeatTypeId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.SeatTypeId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.SeatTypeId" class="delete-link">Delete</a>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div style="text-align: center; margin-top: 50px; color: #b3b3b3;">
            <h3>Список пустий</h3>
            <p>Додайте хоча б "Standard", щоб система працювала!</p>
        </div>
    }
</div>