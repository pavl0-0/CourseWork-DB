@model Kino.Models.SeatType

@{
    ViewData["Title"] = "Деталі";
}

<div class="container" style="margin-top: 50px;">

    <div class="cinema-form-card">
        <h2 style="text-align: center; margin-bottom: 30px;">Інфо про тип</h2>

        <div class="form-group">
            <label class="control-label">ID типу</label>
            <input value="@Model.SeatTypeId" class="form-control" readonly style="color: #b3b3b3 !important;" />
        </div>

        <div class="form-group">
            <label class="control-label">Назва</label>
            <input value="@Model.Name" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label class="control-label">Множник ціни</label>
            <input value="x @Model.PriceMultiplier" class="form-control" readonly style="color: var(--accent-color); font-weight: bold;" />
        </div>

        <div style="text-align: center; margin-top: 30px;">
            <a asp-action="Edit" asp-route-id="@Model.SeatTypeId" class="btn-cinema">✏️ Редагувати</a>
            <a asp-action="Index" class="btn-secondary">Назад</a>
        </div>
    </div>

</div>