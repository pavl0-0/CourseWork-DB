@model Kino.Models.SeatType

@{
    ViewData["Title"] = "Видалити";
}

<div class="container" style="margin-top: 50px;">

    <div class="cinema-form-card" style="border-color: #e50914;">
        <h2 style="text-align: center; margin-bottom: 20px;">Видалення типу</h2>

        <div style="text-align: center;">
            <p class="delete-warning">Ви впевнені?</p>

            <h1 style="font-size: 2.5rem; margin: 20px 0;">@Model.Name</h1>

            <p style="color: #b3b3b3; font-size: 0.9rem;">
                Якщо цей тип використовується у залах, ви не зможете його видалити (або виникне помилка).
            </p>

            <form asp-action="Delete">
                <input type="hidden" asp-for="SeatTypeId" />

                <div style="margin-top: 30px;">
                    <input type="submit" value="Так, видалити" class="btn-cinema" style="background-color: darkred;" />
                    <a asp-action="Index" class="btn-secondary">Скасувати</a>
                </div>
            </form>
        </div>
    </div>

</div>