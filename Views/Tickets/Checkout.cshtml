@model Kino.ViewModels.CheckoutViewModel
@{
    ViewData["Title"] = "Оплата";
}

<style>
    .payment-method {
        border: 2px solid #444;
        border-radius: 8px;
        padding: 15px;
        text-align: center;
        cursor: pointer;
        transition: 0.2s;
        background: #1e1e1e;
        color: #ccc;
    }

        .payment-method.active {
            border-color: #e50914;
            background-color: rgba(229, 9, 20, 0.1);
            color: white;
        }

    .checkout-summary {
        background: #1e1e1e;
        padding: 20px;
        border-radius: 8px;
        border: 1px solid #333;
    }
</style>

<div class="container mt-4">
    <h2 class="mb-4">💳 Оформлення замовлення</h2>

    <form asp-action="ConfirmBooking" method="post">
        <input type="hidden" name="sessionId" value="@Model.SessionId" />
        <input type="hidden" name="selectedSeatIds" value="@Model.SelectedSeatIds" />

        <div class="row">
            <div class="col-lg-8">

                <div class="cinema-form-card mb-4">
                    <h4 class="mb-3">Спосіб оплати</h4>
                    <div class="row g-3">
                        <div class="col-4">
                            <div class="payment-method active" onclick="selectPay(this)">Картка</div>
                        </div>
                        <div class="col-4">
                            <div class="payment-method" onclick="selectPay(this)">Apple Pay</div>
                        </div>
                        <div class="col-4">
                            <div class="payment-method" onclick="selectPay(this)">G-Pay</div>
                        </div>
                    </div>
                </div>

                <div class="cinema-form-card mb-4">
                    <h4 class="mb-3">Куди надіслати квитки?</h4>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label>Ім'я</label>
                            <input name="guestName" class="form-control" placeholder="Іван" required value="@Model.ClientName" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Телефон</label>
                            <input name="guestPhone" class="form-control" placeholder="+380..." required value="@Model.ClientPhone" />
                        </div>
                        <div class="col-12">
                            <label>Email</label>
                            <input name="guestEmail" type="email" class="form-control" placeholder="example@mail.com" required value="@Model.ClientEmail" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="checkout-summary">
                    <h5 class="text-white mb-3">Ваше замовлення</h5>
                    <p class="mb-1"><strong>@Model.MovieTitle</strong></p>
                    <p class="text-muted small">@Model.HallName | @Model.StartTime.ToString("HH:mm")</p>
                    <hr style="border-color: #444;">

                    @foreach (var seat in Model.SelectedSeats)
                    {
                        <div class="d-flex justify-content-between text-white small mb-2">
                            <span>Ряд @seat.Row, Місце @seat.Number <span class="text-muted">(@seat.Type)</span></span>
                            <span>@seat.Price.ToString("0") грн</span>
                        </div>
                    }

                    <hr style="border-color: #444;">
                    <div class="d-flex justify-content-between h5 text-white">
                        <span>Разом:</span>
                        <span style="color: var(--accent-color);">@Model.TotalPrice.ToString("0") грн</span>
                    </div>

                    <button type="submit" class="btn-cinema w-100 mt-3">Оплатити</button>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    function selectPay(el) {
        document.querySelectorAll('.payment-method').forEach(x => x.classList.remove('active'));
        el.classList.add('active');
    }
</script>