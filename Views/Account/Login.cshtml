@model Kino.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Вхід";
}

<div class="container" style="margin-top: 80px;">
    <div class="cinema-form-card" style="max-width: 400px; border-color: var(--accent-color);">
        <h2 class="text-center mb-4">🔑 Вхід</h2>

        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" placeholder="example@mail.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Password">Пароль</label>
                <input asp-for="Password" class="form-control" placeholder="******" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-cinema w-100">Увійти</button>

            <div class="text-center mt-3">
                <a asp-action="Register" class="text-muted small">Немає акаунту? Зареєструватися</a>
            </div>
        </form>
    </div>
</div>