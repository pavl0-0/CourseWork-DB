@model Kino.Models.Hall

@{
    ViewData["Title"] = "Деталі залу";
}

<div class="container" style="margin-top: 50px;">

    <div class="cinema-form-card">
        <h2 style="text-align: center; margin-bottom: 30px;">Інфо про зал</h2>

        <div class="form-group">
            <label class="control-label">ID залу</label>
            <input value="@Model.HallId" class="form-control" readonly style="color: #b3b3b3 !important;" />
        </div>

        <div class="form-group">
            <label class="control-label">Номер залу</label>
            <input value="@Model.HallNumber" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label class="control-label">Кількість місць</label>
            <input value="@Model.SeatCapacity" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label class="control-label">Технології (Екран / Звук)</label>
            <input value="@(Model.ScreenType ?? "-") / @(Model.SoundType ?? "-")" class="form-control" readonly />
        </div>

        <div style="text-align: center; margin-top: 30px;">
            <a asp-action="Edit" asp-route-id="@Model.HallId" class="btn-cinema">✏️ Редагувати</a>
            <a asp-action="Index" class="btn-secondary">Назад</a>
        </div>
    </div>

</div>