@model Kino.Models.Hall

@{
    ViewData["Title"] = "Новий зал";
}

<div class="container" style="margin-top: 50px;">

    <div class="cinema-form-card">
        <h2 style="text-align: center; margin-bottom: 30px;">Новий зал</h2>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="HallNumber" class="control-label">Номер залу</label>
                <input asp-for="HallNumber" class="form-control" type="number" placeholder="1" />
                <span asp-validation-for="HallNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SeatCapacity" class="control-label">Кількість місць</label>
                <input asp-for="SeatCapacity" class="form-control" type="number" placeholder="50" />
                <span asp-validation-for="SeatCapacity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ScreenType" class="control-label">Тип екрану (напр. IMAX, 3D)</label>
                <input asp-for="ScreenType" class="form-control" />
                <span asp-validation-for="ScreenType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SoundType" class="control-label">Тип звуку (напр. Dolby Atmos)</label>
                <input asp-for="SoundType" class="form-control" />
                <span asp-validation-for="SoundType" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-top: 30px; text-align: center;">
                <input type="submit" value="Створити" class="btn-cinema" />
                <a asp-action="Index" class="btn-secondary">Назад</a>
            </div>
        </form>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}