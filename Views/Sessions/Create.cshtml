@model Kino.Models.Session

@{
    ViewData["Title"] = "Новий сеанс";
}

<div class="container" style="margin-top: 50px;">

    <div class="cinema-form-card">
        <h2 style="text-align: center; margin-bottom: 30px;">Запланувати сеанс</h2>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FilmId" class="control-label">Фільм</label>
                <select asp-for="FilmId" class="form-control" asp-items="ViewBag.FilmId"></select>
            </div>

            <div class="form-group">
                <label asp-for="HallId" class="control-label">Зал</label>
                <select asp-for="HallId" class="form-control" asp-items="ViewBag.HallId"></select>
            </div>

            <div class="form-group">
                <label asp-for="StartTime" class="control-label">Дата і час початку</label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BaseTicketPrice" class="control-label">Базова ціна квитка (грн)</label>
                <input asp-for="BaseTicketPrice" class="form-control" type="number" />
                <span asp-validation-for="BaseTicketPrice" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-top: 30px; text-align: center;">
                <input type="submit" value="Створити" class="btn-cinema" />
                <a asp-action="Index" class="btn-secondary">Назад</a>
            </div>
        </form>
    </div>
</div>