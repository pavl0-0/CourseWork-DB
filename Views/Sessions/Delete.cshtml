@model Kino.Models.Session

@{
    ViewData["Title"] = "Скасувати сеанс";
}

<div class="container" style="margin-top: 50px;">
    <div class="cinema-form-card" style="border-color: #e50914;">
        <h2 style="text-align: center; margin-bottom: 20px;">Скасування сеансу</h2>

        <div style="text-align: center;">
            <p class="delete-warning">Ви впевнені? Це видалить сеанс з розкладу!</p>

            <h1 style="margin: 20px 0;">@Model.StartTime.ToString("dd.MM HH:mm")</h1>
            <h3 style="color: var(--accent-color);">@Model.Film.TitleUkrainian</h3>
            <p class="text-muted">Зал №@Model.Hall.HallNumber</p>

            <form asp-action="Delete">
                <input type="hidden" asp-for="SessionId" />
                <div style="margin-top: 30px;">
                    <input type="submit" value="Скасувати сеанс" class="btn-cinema" style="background-color: darkred;" />
                    <a asp-action="Index" class="btn-secondary">Назад</a>
                </div>
            </form>
        </div>
    </div>
</div>