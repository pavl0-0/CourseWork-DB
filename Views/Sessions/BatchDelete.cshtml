@model Kino.ViewModels.SessionBatchDeleteViewModel

@{
    ViewData["Title"] = "Масове видалення";
}

<div class="container" style="margin-top: 50px;">

    <div class="cinema-form-card" style="border-color: darkred; max-width: 700px;">
        <h2 style="text-align: center; margin-bottom: 20px; color: #e50914;">Масове видалення сеансів</h2>

        <div class="alert alert-danger text-center">
            <strong>Увага!</strong> Ця дія незворотна. Будуть видалені <strong>ВСІ</strong> сеанси, що відповідають критеріям.
        </div>

        <form asp-action="BatchDelete">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FilmId" class="control-label">Фільм (або пусто = всі)</label>
                        <select asp-for="FilmId" asp-items="Model.Films" class="form-control">
                            <option value="">-- Усі фільми --</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="HallId" class="control-label">Зал (або пусто = всі)</label>
                        <select asp-for="HallId" asp-items="Model.Halls" class="form-control">
                            <option value="">-- Усі зали --</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DateFrom" class="control-label">З дати</label>
                        <input asp-for="DateFrom" class="form-control" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="form-group">
                        <label asp-for="DateTo" class="control-label">По дату</label>
                        <input asp-for="DateTo" class="form-control" type="date" value="@DateTime.Today.AddDays(7).ToString("yyyy-MM-dd")" />
                    </div>
                </div>
            </div>

            <div class="form-group" style="margin-top: 30px; text-align: center;">
                <input type="submit" value="🔥 Видалити сеанси" class="btn-cinema" style="background-color: darkred; width: 100%;" />
                <br /><br />
                <a asp-action="Index" class="btn-secondary">Скасувати</a>
            </div>
        </form>
    </div>
</div>