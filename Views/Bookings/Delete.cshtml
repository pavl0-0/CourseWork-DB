@model Kino.Models.Booking

@{
    ViewData["Title"] = "Видалити замовлення";
}

<div class="container" style="margin-top: 50px;">
    <div class="cinema-form-card" style="border-color: #e50914; max-width: 500px;">
        <h2 style="text-align: center; margin-bottom: 20px; color: #e50914;">Анулювання замовлення</h2>

        <div style="text-align: center;">
            <p class="delete-warning">Видалити це замовлення з бази?</p>

            <h1 style="margin: 20px 0;">#@Model.BookingId</h1>
            <p class="text-muted">
                Клієнт: @Model.Client.FirstName (@Model.TotalAmount грн)
            </p>

            <div class="alert alert-danger">
                ⚠️ Увага! Це також видалить всі квитки, пов'язані з цим замовленням.
                Місця знову стануть вільними для продажу.
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="BookingId" />
                <div style="margin-top: 30px;">
                    <input type="submit" value="🔥 Видалити назавжди" class="btn-cinema" style="background-color: darkred; width: 100%;" />
                    <br /><br />
                    <a asp-action="Index" class="btn-secondary">Скасувати</a>
                </div>
            </form>
        </div>
    </div>
</div>