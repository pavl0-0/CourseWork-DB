@model IEnumerable<Kino.Models.Role>

@{
    ViewData["Title"] = "Ролі";
}

<div class="container">
    <div class="page-header">
        <h1 class="page-title">Ролі у кіно</h1>
        <a asp-action="Create" class="btn-cinema">+ Додати роль</a>
    </div>

    <div class="cinema-grid">
        @foreach (var item in Model)
        {
            <div class="genre-card" style="text-align: center;">
                <div style="font-size: 2.5rem; margin-bottom: 10px;">🎥</div>

                <h3 class="genre-name">@item.RoleName</h3>

                <div class="card-actions" style="margin-top: 15px;">
                    <a asp-action="Edit" asp-route-id="@item.RoleId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.RoleId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.RoleId" class="delete-link">Delete</a>
                </div>
            </div>
        }
    </div>
</div>