@model Kino.Models.Role

@{
    ViewData["Title"] = "Деталі ролі";
}

<div class="container" style="margin-top: 50px;">
    <div class="cinema-form-card" style="max-width: 500px;">
        <h2 style="text-align: center; margin-bottom: 30px;">Інфо</h2>

        <div style="text-align: center; font-size: 3rem; margin-bottom: 20px;">🎬</div>

        <div class="form-group">
            <label class="control-label">ID</label>
            <input value="@Model.RoleId" class="form-control text-center" readonly style="width: 100px; margin: 0 auto;" />
        </div>

        <div class="form-group">
            <label class="control-label">Назва</label>
            <input value="@Model.RoleName" class="form-control text-center" readonly style="font-weight: bold; font-size: 1.2rem;" />
        </div>

        <div style="text-align: center; margin-top: 30px;">
            <a asp-action="Edit" asp-route-id="@Model.RoleId" class="btn-cinema">✏️ Редагувати</a>
            <a asp-action="Index" class="btn-secondary">Назад</a>
        </div>
    </div>
</div>