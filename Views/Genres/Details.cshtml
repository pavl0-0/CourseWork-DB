@model Kino.Models.Genre

@{
    ViewData["Title"] = "Деталі";
}

<div class="container" style="margin-top: 50px;">

    <div class="cinema-form-card">
        <h2 style="text-align: center; margin-bottom: 30px;">Інформація про жанр</h2>

        <div style="margin-bottom: 30px;">

            <div class="form-group">
                <label class="control-label">ID у системі</label>
                <input value="@Model.GenreId" class="form-control" readonly style="color: #b3b3b3 !important;" />
            </div>

            <div class="form-group">
                <label class="control-label">Назва жанру</label>
                <input value="@Model.Name" class="form-control" readonly />
            </div>

        </div>

        <div style="text-align: center; margin-top: 30px;">
            <a asp-action="Edit" asp-route-id="@Model.GenreId" class="btn-cinema">✏️ Редагувати</a>
            <a asp-action="Index" class="btn-secondary">Назад до списку</a>
        </div>
    </div>

</div>