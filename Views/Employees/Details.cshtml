@model Kino.Models.Employee

@{
    ViewData["Title"] = "Деталі співробітника";
}

<div class="container" style="margin-top: 50px;">
    <div class="cinema-form-card" style="max-width: 600px;">
        <h2 style="text-align: center; margin-bottom: 30px;">Картка співробітника</h2>

        <div class="form-group">
            <label class="control-label">ID</label>
            <input value="@Model.EmployeeId" class="form-control" readonly style="color: #666; width: 100px;" />
        </div>

        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label class="control-label">Ім'я</label>
                    <input value="@Model.FirstName" class="form-control" readonly />
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label class="control-label">Прізвище</label>
                    <input value="@Model.LastName" class="form-control" readonly />
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label">Email (Логін)</label>
            <input value="@Model.Email" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label class="control-label">Телефон</label>
            <input value="@Model.PhoneNumber" class="form-control" readonly />
        </div>

        <div style="text-align: center; margin-top: 30px;">
            <a asp-action="Edit" asp-route-id="@Model.EmployeeId" class="btn-cinema">Редагувати</a>
            <a asp-action="Index" class="btn-secondary">Назад</a>
        </div>
    </div>
</div>